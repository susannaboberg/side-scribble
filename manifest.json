{
  "manifest_version": 3,
  "name": "SideScribble",
  "description": "Note-taking made simple. Jot down notes in a side panel without the frustration of switching windows or tabs.",
  "version": "1.0.0",
  "side_panel": {
    "default_path": "sidepanel.html"
  },
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "action": {
    "default_title": "SideScribble",
    "default_popup": "sidepanel.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "32": "icons/icon32.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "permissions": ["sidePanel", "storage", "tabs"]


}